<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.ecnu.chgao.healthcare.view.FindPwdActivity">

    <EditText
        android:id="@+id/id_find_pwd_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入手机号码" />

    <EditText
        android:id="@+id/id_find_pwd_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入验证码" />

    <EditText
        android:id="@+id/id_find_pwd_new_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入新的密码" />

    <Button
        android:id="@+id/id_find_pwd_get_sms_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取验证码" />

    <Button
        android:id="@+id/id_find_pwd_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="重置密码" />

</LinearLayout>
