<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@color/cardview_dark_background"
    android:padding="4dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@color/yellow">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_margin="8dp"
                android:id="@+id/id_main_header_menu"
                android:src="@drawable/ic_menu_red_a700_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <org.ecnu.chgao.healthcare.view.customview.StepArcView
                android:id="@+id/id_main_step_arc_view"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="50dp" />

            <TextView
                android:id="@+id/id_main_today_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_main_step_arc_view"
                android:layout_centerHorizontal="true"
                android:text="今日计划：" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>


</FrameLayout>