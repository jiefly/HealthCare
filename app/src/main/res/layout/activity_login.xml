<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.ecnu.chgao.healthcare.view.LoginActivity">

    <ImageView
        android:id="@+id/id_register_pic_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="25dp"
        android:src="@drawable/logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/register"
        android:layout_below="@+id/id_register_pic_logo"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <EditText
            android:id="@+id/accountEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/main_input_edit_bg"
            android:gravity="center"
            android:hint="请输入用户名"
            android:inputType="number"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/pwdEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:background="@drawable/main_input_edit_bg"
            android:gravity="center"
            android:hint="请输入密码"

            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:background="@drawable/button_bg"
            android:gravity="center"
            android:text="登 录" />

        <TextView
            android:id="@+id/id_login_forgot_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:textSize="10sp"
            android:text="忘记密码？"
            android:textColor="#c40051ff" />
    </LinearLayout>

    <TextView
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:text="注册新用户"
        android:textSize="15sp" />
</RelativeLayout>
